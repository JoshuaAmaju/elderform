{
  "name": "elderform",
  "version": "0.1.6",
  "license": "MIT",
  "author": "Joshua Amaju",
  "main": "dist/index.js",
  "module": "dist/elderform.esm.js",
  "typings": "dist/types/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "analyze": "size-limit",
    "build": "dts build",
    "lint": "dts lint",
    "prepare": "dts build",
    "size": "size-limit",
    "start": "dts watch",
    "test": "dts test",
    "clean": "rimraf -rf node_modules pnpm-lock.yaml",
    "pub": "np"
  },
  "husky": {
    "hooks": {
      "pre-commit": "dts lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "size-limit": [
    {
      "path": "dist/elderform.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/elderform.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.5",
    "@tsconfig/recommended": "^1.0.1",
    "@types/ramda": "^0.27.61",
    "dts-cli": "^1.1.3",
    "rimraf": "^3.0.2",
    "size-limit": "^7.0.5",
    "xstate": "^4.26.1",
    "zod": "^3.11.6"
  },
  "peerDependencies": {
    "xstate": "^4.26.1"
  },
  "description": "Form creation made easy, backed by state machines",
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JoshuaAmaju/elderform.git"
  },
  "keywords": [
    "form",
    "validation",
    "xstate",
    "state machine",
    "fsm",
    "formik",
    "forms",
    "validate",
    "state"
  ],
  "bugs": {
    "url": "https://github.com/JoshuaAmaju/elderform/issues"
  },
  "homepage": "https://github.com/JoshuaAmaju/elderform#readme"
}
