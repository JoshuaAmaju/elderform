{
  "name": "popform",
  "version": "0.1.0",
  "license": "MIT",
  "author": "Joshua Amaju",
  "main": "dist/index.js",
  "module": "dist/popform.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "analyze": "size-limit",
    "build": "dts build",
    "lint": "dts lint",
    "prepare": "dts build",
    "size": "size-limit",
    "start": "dts watch",
    "test": "dts test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "dts lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">=12"
  },
  "size-limit": [
    {
      "path": "dist/popform.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/popform.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.5",
    "@tsconfig/recommended": "^1.0.1",
    "@types/ramda": "^0.27.61",
    "dts-cli": "^1.1.3",
    "size-limit": "^7.0.5",
    "xstate": "^4.26.1",
    "zod": "^3.11.6"
  },
  "peerDependencies": {
    "xstate": "^4.26.1",
    "zod": "^3.11.6"
  }
}
